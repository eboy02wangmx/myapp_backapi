<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jp.co.myapp.api.domain.repository.ContractRepository">

	<select id="selectAll" resultType="jp.co.myapp.api.domain.model.Contract">
		select * from contract;
	</select>

	<select id="selectById" parameterType="Integer" resultType="jp.co.myapp.api.domain.model.Contract">
		select * from contract where id = #{id};
	</select>

	<insert id="insert" parameterType="jp.co.myapp.api.domain.model.Contract">
		insert contract(name, uploadNum, money, pv, status) values(#{name}, #{uploadNum}, #{money}, #{pv}, 1);
	</insert>

	<update id="update" parameterType="jp.co.myapp.api.domain.model.Contract">
		update contract set name = #{name}, uploadNum = #{uploadNum}, money = #{money}, pv = #{pv} where id = #{id};
	</update>

	<delete id="delete" parameterType="Integer">
		delete from contract where id = #{id};
	</delete>

	<update id="disabled" parameterType="Integer">
		update contract set status = 2 where id = #{id};
	</update>

	<update id="enabled" parameterType="Integer">
		update contract set status = 1 where id = #{id};
	</update>

</mapper>
