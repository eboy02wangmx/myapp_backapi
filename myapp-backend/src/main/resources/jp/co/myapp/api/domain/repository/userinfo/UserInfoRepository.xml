<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="jp.co.myapp.api.domain.repository.userinfo.UserInfoRepository">

	<resultMap id="userInfoBeanMap" type="UserInfoBean">
		<result property="name" column="name" javaType="java.lang.String"></result>
		<result property="planname" column="planname" javaType="java.lang.String"></result>
		<result property="soshikime" column="soshikime" javaType="java.lang.String"></result>
		<result property="address" column="address" javaType="java.lang.String"></result>
		<result property="tel" column="tel" javaType="java.lang.String"></result>
		<result property="tantobusho" column="tantobusho" javaType="java.lang.String"></result>
		<result property="tantosha" column="tantosha" javaType="java.lang.String"></result>
		<result property="mail" column="mail" javaType="java.lang.String"></result>
		<result property="keiyakuhi" column="keiyakuhi" javaType="java.lang.String"></result>
		<result property="keiyakushiki" column="keiyakushiki" javaType="java.lang.String"></result>
		<result property="keiyakushuki" column="keiyakushuki" javaType="java.lang.String"></result>
	</resultMap>

	<select id="getUserInfo" parameterType="String" resultMap="userInfoBeanMap">
        <![CDATA[
        SELECT
			u.name,
			u.planname,
			u.soshikime,
			u.address,
			u.tel,
			u.tantobusho,
			u.tantosha,
			u.mail,
			u.keiyakuhi,
			u.keiyakushiki,
			u.keiyakushuki
		FROM
			user_info u
		WHERE
			u.userid = #{userId}
		]]>
	</select>

	<select id="getUserPlan" parameterType="String" resultType="String">
        SELECT name FROM contract
	</select>

</mapper>